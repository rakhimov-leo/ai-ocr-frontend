// Bu faylni config.local.js deb nusxalang. Maxfiy kalitlarni BURGA yozmang – ular backend .env da.
// config.local.js .gitignore da – GitHub'ga push qilinsa ham kalit ko'rinmaydi.
// Nusxalash: cp config.local.js.example config.local.js

(function() {
    if (typeof CONFIG === 'undefined') return;

    // Develop: localhost da config.js dagi http://localhost:8030/api ishlatiladi.
    // Production: faqat localhost emas bo'lganda API manzilini o'zgartiring:
    var isLocal = (typeof window !== 'undefined' && (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1'));
    if (!isLocal) {
        CONFIG.API_BASE_URL = 'https://api.yourdomain.com/api';  // yoki SERVER_IP:8030/api
    }
    // GEMINI_API_KEY, GROQ_API_KEY, ADMIN_AGENT_SECRET – backend .env da; frontendda yozmang.
})();
